<head>
  <body background="https://d1a3f4spazzrp4.cloudfront.net/web-fresh/home/map-web@2x.gif">
  </head>

  <body>
    <div class="center-align">
      <h1 class="white-text"> <%= current_user.user_name %></h1>
      <%= link_to "Create New Playlist", new_playlist_path, class:"btn large lime darken-2"%><br>
    </div><br>

    <div class="row">
      <h1 class="white-text center">Your Playlists</h1>
      <% @playlists.each do |list| %>
      <div class="col s4">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title black-text"><h3><%= list.name %></h3></span>
            <p>There are currently <%=list.total%> tracks in this playlist.</p>
            <p>Navigate into playlist to see more options</p>
            </div>
            <div id="<%= list.name %>" class="card-action">
              <%= link_to "View/Edit Details", playlist_path(list, pl_id: list.id, user: current_user.user_name, pl_name: list.name, user_id: current_user.id) %>
            </div>
          </div>
        </div>
        <% end %>
      </div>

    </body>
