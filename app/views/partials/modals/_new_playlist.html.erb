<!-- Modal -->
<div id="new-playlist" class="modal black">
  <div class="modal-header">
    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat white-text">X</a>
  </div>
    <div class="row">
      <div class="col m3">
        <p></p>
      </div>
      <div class="col m6 center-align white-text">
        <h5>New Playlist Name</h5>
        <%= form_tag playlists_path, method: :post do %>
          <%= label_tag :name %>
          <%= text_field_tag :name %>
          <br><br>
          <%= submit_tag "Create", class: "create-btn btn lime darken-2" %>
        <% end %>
    </div>
    </div><br>
</div>
